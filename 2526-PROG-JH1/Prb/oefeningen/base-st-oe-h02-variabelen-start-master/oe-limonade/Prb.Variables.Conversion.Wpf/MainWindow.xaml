<Window x:Class="Prb.Variables.Conversion.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prb.Variables.Conversion.Wpf"
        mc:Ignorable="d"
        Title="Lemonade Order" Height="238" Width="518">
    <Grid>
        <Label Content="Liters to buy" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="112"/>
        <TextBox x:Name="txtLitersToBuy" HorizontalAlignment="Left" Margin="127,14,0,0" TextWrapping="Wrap" Text="10,5" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="120"/>
        <Label Content="Price / L" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="112"/>
        <TextBox x:Name="txtPricePerLiter" HorizontalAlignment="Left" Margin="127,37,0,0" TextWrapping="Wrap" Text="1,5" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="120"/>
        <Label Content="Persons" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="112"/>
        <TextBox x:Name="txtPersons" HorizontalAlignment="Left" Margin="127,59,0,0" TextWrapping="Wrap" Text="4" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="120"/>
        <Label Content="Consent" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="112"/>
        <TextBox x:Name="txtConsent" HorizontalAlignment="Left" Margin="127,82,0,0" TextWrapping="Wrap" Text="true" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnProcessOrder" Content="Process Order" HorizontalAlignment="Left" Margin="127,114,0,0" VerticalAlignment="Top" Height="27" Width="120" Click="btnProcessOrder_Click"/>
        <Label Content="Price (no VAT)" HorizontalAlignment="Left" Margin="276,11,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="VAT" HorizontalAlignment="Left" Margin="276,33,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="276,56,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Liters Per Person" HorizontalAlignment="Left" Margin="276,79,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtPriceNoVat" IsReadOnly="True" HorizontalAlignment="Left" Margin="381,14,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="115" TextAlignment="Right"/>
        <TextBox x:Name="txtVAT" IsReadOnly="True" HorizontalAlignment="Left" Margin="381,37,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="115" TextAlignment="Right"/>
        <TextBox x:Name="txtPrice" IsReadOnly="True" HorizontalAlignment="Left" Margin="381,60,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="115" TextAlignment="Right"/>
        <TextBox x:Name="txtLitersPerPerson" IsReadOnly="True" HorizontalAlignment="Left" Margin="381,83,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Right" VerticalAlignment="Top" Width="115" TextAlignment="Right"/>

    </Grid>
</Window>
